<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#def8f8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp"
        android:backgroundTint="#50c2c9"
        android:layout_marginTop="-22dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:layout_weight="78"
                >

                <ImageButton
                    android:id="@+id/back_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="92dp"
                    android:layout_marginBottom="94dp"
                    android:background="#50c2c9"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="92dp"
                    android:layout_toEndOf="@+id/back_arrow"
                    android:text="Book your session"
                    android:textColor="#157177"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_mentor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_arrow"
                    android:layout_marginTop="-80dp"
                    android:text="John Cooper"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/txt_mentor_name"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_btn_filled"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        >
                    </TextView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#80dad4"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/mentor_image"
                        android:layout_width="82dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#80dad4"
                        android:src="@drawable/filled_white_circle"
                        app:cornerRadius="30dp">

                    </ImageView>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#80dad4"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"
                android:layout_weight="20"
                >

                <TextView
                    android:id="@+id/txt_mentor_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1500/Session"
                    android:textColor="#ffc90a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    >

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#ffc90a"
                    app:cardCornerRadius="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    >

                    <ImageButton
                        android:id="@+id/message_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffc90a"
                        android:src="@drawable/chat_btn"
                        app:cornerRadius="30dp"
                        >

                    </ImageButton>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#ffc90a"
                    app:cardCornerRadius="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    >

                    <ImageButton
                        android:id="@+id/audiocall_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffc90a"
                        android:src="@drawable/call_btn"
                        app:cornerRadius="30dp"
                        >

                    </ImageButton>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#ffc90a"
                    app:cardCornerRadius="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >

                    <ImageButton
                        android:id="@+id/videocall_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffc90a"
                        android:src="@drawable/videocam_unfilled_green"
                        app:cornerRadius="30dp"
                        >

                    </ImageButton>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:background="#def8f8"
        android:orientation="vertical"
        >

        <CalendarView
            android:id="@+id/calender_1"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            >

        </CalendarView>

        <TextView
            android:id="@+id/txt_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calender_1"
            android:text="Available Time Slots"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_available"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            >

            <Button
                android:id="@+id/time_btn_1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:cornerRadius="6dp"
                android:text="10:00 AM"
                android:padding="2dp"
                android:backgroundTint="#ddefef"
                android:textColor="@color/black"
                >
            </Button>

            <Button
                android:id="@+id/time_btn_2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:cornerRadius="6dp"
                android:text="11:00 AM"
                android:padding="2dp"
                android:backgroundTint="#0b8fac"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
            </Button>

            <Button
                android:id="@+id/time_btn_3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:cornerRadius="6dp"
                android:text="12:00 AM"
                android:padding="2dp"
                android:backgroundTint="#ddefef"
                android:textColor="@color/black"
                >
            </Button>

        </LinearLayout>


        <Button
            android:id="@+id/book_appoint_btn"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:backgroundTint="#157177"
            android:text="Book an Appointment"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >

        </Button>

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#def8f8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="64"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp"
        android:backgroundTint="#50c2c9"
        android:layout_marginTop="-22dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="14dp"
                android:layout_weight="44">

                <ImageButton
                    android:id="@+id/back_arrow"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="94dp"
                    android:background="#50c2c9"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:id="@+id/txt_hi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_arrow"
                    android:layout_marginTop="-96dp"
                    android:text="Hi, I'm"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/user_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_hi"
                    android:layout_marginTop="0dp"
                    android:text="John Cooper"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#80dad4"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="82dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#80dad4"
                        android:src="@drawable/filled_white_circle"
                        app:cornerRadius="30dp"
                        android:scaleType="centerCrop"
                        >

                    </ImageView>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="24"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"

                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#80dad4" />

                <TextView
                    android:id="@+id/user_occupation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="UX Designer at"
                    android:textColor="@color/white"
                    android:textSize="32dp">

                </TextView>

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/textView7"-->
<!--                    android:layout_marginTop="0dp"-->
<!--                    android:text="Google"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="32dp">-->

<!--                </TextView>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_btn_filled"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        >
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#80dad4"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About me"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/user_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="I am a passionate UX designer at Google with a focus on creating user-centric and intuitive interfaces. With 10 years of experience, I have had the opportunity to work on diverse projects that have shaped my understanding of design principles and user experience"
                    android:layout_marginTop="2dp"
                    >

                </TextView>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="39"
        android:background="#def8f8"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/Layout_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Expertise Include"
                android:textColor="#157177"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Layout_1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="26dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#50c2c9"
                android:text="Career Advice"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"
                >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#50c2c9"
                android:text="User Experience Design"
                android:layout_marginLeft="20dp"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"

                >
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Layout_2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="26dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#50c2c9"
                android:text="Leadership"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"
                >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#50c2c9"
                android:text="Prototyping"
                android:layout_marginLeft="20dp"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"

                >
            </Button>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Layout_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Layout_3"
            android:orientation="horizontal"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="20dp"
            >


            <Button
                android:id="@+id/review_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cornerRadius="16dp"
                android:backgroundTint="#ffc90a"
                android:text="Drop a Review"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#157177"
                >
            </Button>

            <Button
                android:id="@+id/community_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:cornerRadius="16dp"
                android:backgroundTint="#ffc90a"
                android:textColor="#157177"
                android:text="Join Community"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                >

            </Button>

        </RelativeLayout>


            <Button
                android:id="@+id/book_session_btn"
                android:layout_width="330dp"
                android:layout_height="54dp"
                android:backgroundTint="#157177"
                android:text="Book a Session"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                >

            </Button>

    </RelativeLayout>


</LinearLayout>